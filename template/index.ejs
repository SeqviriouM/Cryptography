<!DOCTYPE html>
<html lang="en">
  <head>

    <title>Криптография</title>
    
    <!-- Bootstrap core CSS -->
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">

    <style>
      body {
        background-color: #8B00FF;
      }

      h1 {
        color: yellow;
      }
    </style>

  </head>

  <body>

  <!-- Верхгяя менюшка-->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Laba_2</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div><!--Конец верхней менюшки-->


    <div class="container">
      

      <div class="starter-template;" style="text-align:center">
          <h1>Криптография</h1>
      </div>

      <div class = "row">
        <div class="col-xs-3">
        </div>

        <div class="col-xs-6" style="background-color: white; padding: 25px;">

          <form class="form-horizontal" role="form" method="post" action="/action">
            <label>Введите предложения для кодирования:</label>
            <div class="form-group">
              <input type="text" name="sentence" id="sentence" size="30">
            </div>
            <label>Выберите необходимые действия:</label>
            <div class="form-group">
              <div class="radio">
                <label>
                  <input type="radio" name="actions" id="encryption" value="encryption">
                    Шифрование
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="actions" id="decryption" value="decryption">
                      Расшифрование
                </label>
              </div>
            </div>
            
            <label>Выберите метод</label>
            <div class="form-group">
              <div class="radio">
                <label>
                  <input type="radio" name="options" id="sigle" value="single">
                    Шифр одиночной перестановки
                </label>
                </div>
                <div class="radio">
                  <label>
                    <input type="radio" name="options" id="twice" value="twice">
                      Шифр двойной перестановки
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <input type="radio" name="options" id="magic" value="magic">
                      Магический квадрат
                  </label>
                </div>
            </div>
            <div class="form-group">
              <div id="add_fields">

              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-10">
              </div>
              <div class="col-sm-2">
                <button type="submit" class="btn btn-success">Далее</button>
              </div>
            </div>
          </form>

        </div>

        <div class='col-xs-3'>
        </div>
      </div>
  
    </div><!-- /.container -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

    <script>

    var c=0;

    function inputKeyword(count) {
      
      $('#add_fields').empty();
      c=0;

      for (var  i=0; i<count; i++) {
        $('#add_fields').append('<label>Ключевое слово ' + (i+1) + ':</label><br><div  id="info'+ i + '"><input type="text" id="keyword' + i + '" name="keyword' + c + '" placeholder="Длина ключевого слова ' + Math.ceil($('#sentence').val().length/5) + '" size="30" "></div><br>');
      c++;
    }
      

  }

  $(function(){
    // Активация текстового поля для ввода названия транспорта при выборе варианта "Другой вид транспорта"
    $('input[name=options]:radio').change(function() {
      if (this.value === "single") {
        inputKeyword(1);
      } else if (this.value === "twice") {
        inputKeyword(2);
      } 
    }); 
  })

    </script>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    <script src="bootstrap/js/bootstrap.min.js"></script>

  </body>
</html>
