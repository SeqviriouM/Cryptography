<!DOCTYPE html>
<html lang="en">
  <head>

    <title>Криптография</title>
    
    <!-- Bootstrap core CSS -->
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">

    <style>
      body {
        background-color: #8B00FF;
      }

      h1 {
        color: yellow;
      }
    </style>

  </head>

  <body>

  <!-- Верхгяя менюшка-->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Laba_2</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div><!--Конец верхней менюшки-->


    <div class="container">
      

      <div class="starter-template;" style="text-align:center">
          <h1>Криптография</h1>
      </div>

      <div class = "row">
        <div class="col-xs-3">
        </div>

        <div class="col-xs-6" style="background-color: white; padding: 25px;">

          <form class="form-horizontal" role="form" method="post" action="/action">
            <label>Введите предложения для кодирования:</label>
            <div class="form-group">
              <input type="text" name="sentence" id="sentence" size="30">
            </div>
            <label>Выберите необходимые действия:</label>
            <div class="form-group">
              <div class="radio">
                <label>
                  <input type="radio" name="actions" id="encryption" value="encryption">
                    Шифрование
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="actions" id="decryption" value="decryption">
                      Расшифрование
                </label>
              </div>
            </div>            
            <label>Выберите метод</label>
            <div class="form-group">
              <div class="radio">
                <label>
                  <input type="radio" name="options" id="caesar" value="caesar">
                    Шифр Цезаря
                </label>
                </div>
                <div class="radio">
                  <label>
                    <input type="radio" name="options" id="gronsfeld" value="gronsfeld">
                      Шифр двойной перестановки
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <input type="radio" name="options" id="gamma" value="gamma">
                      Гаммирование
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <input type="radio" name="options" id="pleifera" value="pleifera">
                      Шифр Плейфейра
                  </label>
                </div>
            </div>

            <div class="form-group">
              <div id="add_fields">

              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-10">
              </div>
              <div class="col-sm-2">
                <button type="submit" class="btn btn-success">Далее</button>
              </div>
            </div>
          </form>

        </div>

        <div class='col-xs-3'>
        </div>
      </div>
  
    </div><!-- /.container -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

    <script>

    function inputKeyword() {
      // Удаляем предыдущие поля
      $('#add_fields').empty();

      // Добавляем новые поля
      $('#add_fields').append('<label>Ключевое слово:</label><br><div  id="info0"><input type="text" id="keyword0" name="keyword0" size="30" "></div><br>');
        
    }
      

  

  $(function(){
    $('input[name=options]:radio').change(function() {
      inputKeyword();
    }); 
  })

    </script>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    <script src="bootstrap/js/bootstrap.min.js"></script>

  </body>
